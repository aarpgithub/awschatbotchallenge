{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./lib/",
    "lib": ["es2017"],
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": ["./src/"]
}
